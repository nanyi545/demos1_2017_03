<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/Teal100"
    tools:context="com.nanyi545.www.materialdemo.collapse_layout.TestCollapseLayoutActivity">


    <com.nanyi545.www.materialdemo.collapse_layout.CollapsHolder
        android:background="@color/Teal100"
        android:id="@+id/collapse_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/grad_red"
            />

    </com.nanyi545.www.materialdemo.collapse_layout.CollapsHolder>



    <EditText
        android:background="@color/Red100"
        android:layout_toRightOf="@+id/collapse_holder"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/expand_btn"
        android:layout_below="@+id/collapse_holder"
        android:text="expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doExpand"/>


    <Button
        android:id="@+id/collapse_btn"
        android:layout_below="@+id/collapse_holder"
        android:layout_toRightOf="@+id/expand_btn"
        android:text="collapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doCollapse"/>




    <com.nanyi545.www.materialdemo.collapse_layout.CollapsHolder
        android:layout_below="@+id/expand_btn"
        android:background="@color/Teal100"
        android:id="@+id/collapse_holder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="heheda"
            android:textSize="30sp"
            />

        <ImageView
            android:src="@android:drawable/ic_media_play"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </com.nanyi545.www.materialdemo.collapse_layout.CollapsHolder>


    <ImageView
        android:layout_below="@id/collapse_holder1"
        android:id="@+id/gap"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/side_nav_bar"/>



    <com.nanyi545.www.materialdemo.collapse_layout.CollapsHolder
        android:layout_below="@id/gap"
        android:background="@color/Teal100"
        android:id="@+id/collapse_holder2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hahada"
            android:textSize="30sp"
            />

    </com.nanyi545.www.materialdemo.collapse_layout.CollapsHolder>







</RelativeLayout>
