	/**
	 * 根据用户的用户ID获取用户的昵称
	 */
	public String getUserNameWithId(String id) {
		if (treeElementLists != null) {
			for (int i = 0; i < treeElementLists.size(); i++) {
				if (treeElementLists.get(i).getUserId().equals(id)) {
					return treeElementLists.get(i).getUserName();
				}
			}
		}
		return id;
	}

