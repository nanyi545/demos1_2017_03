<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout 
	    android:id="@+id/camera_monitor_annal_msglist_bottom_have"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:paddingTop="10dp"
	    android:paddingBottom="9dp" >

		<ProgressBar
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    style="?android:attr/progressBarStyleSmall"
		    android:layout_gravity="center_vertical"
		     />
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/camera_monitor_annal_msglist_bottom_loading"
		    android:gravity="center_vertical"
	    	android:textColor="@color/color_font_lightgray"
		    />
	</LinearLayout>
	<TextView 
    	android:id="@+id/camera_monitor_annal_msglist_bottom_none"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:paddingTop="9dp"
	    android:paddingBottom="10dp"
	    android:textColor="@color/color_font_lightgray"
	    android:text="@string/camera_monitor_annal_msglist_bottom_none"
	    android:layout_centerHorizontal="true"
	    android:visibility="gone"
	    />
</RelativeLayout>