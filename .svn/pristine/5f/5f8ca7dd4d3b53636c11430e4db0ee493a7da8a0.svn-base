<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.webcon.sus.activities.ExpelAudioActivity">

    <include layout="@layout/layout_include_back_head"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <com.gc.materialdesign.views.ProgressBarIndeterminate
            android:id="@+id/progress_voice_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Green300"
            android:visibility="invisible"/>

        <com.gc.materialdesign.views.ProgressBarIndeterminate
            android:id="@+id/progress_voice_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Orange300"
            android:visibility="invisible"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">
        <Button
            android:id="@+id/bn_voice_record_switch"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:text="@string/bn_voice_record_start"/>

        <Button
            android:id="@+id/bn_voice_play_switch"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:text="@string/bn_voice_play_start"/>

        <Button
            android:id="@+id/bn_voice_clear"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:text="@string/bn_voice_clear"/>

    </LinearLayout>

</LinearLayout>
