<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cpb="http://schemas.android.com/apk/res-auto"
    xmlns:mlp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context="com.webcon.sus.activities.StationDevicesFragment">
    
    <!--<ListView-->
        <!--android:id="@+id/list_devices"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:choiceMode="singleChoice"-->
        <!--android:divider="@android:color/transparent"-->
        <!--android:fadingEdge="none"-->
        <!--android:dividerHeight="0dp">-->
    <!--</ListView>-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvlist_devices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:overScrollMode="never"
        android:scrollbarSize="2dp"/>

    <FrameLayout
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/bn_switch_defence"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/White"/>
        <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
            android:id="@+id/mlp_loading_defence"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            mlp:mlpb_enable_circle_background="false"
            mlp:mlpb_progress_stoke_width="3dp"
            mlp:mlpb_progress_color="@color/White"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>
