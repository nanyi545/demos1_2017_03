                        }
                    } else {
                        msg.what = loginResult;
                        loginMessageHandler.sendMessage(msg);
                        //TODO:
                        stopDoworkService();
                    }
                }

            } else {
                if (!isCanceled) {
                    msg.what = -404;
                    loginMessageHandler.sendMessage(msg);
                }
            }
