<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/equiment_list_item_iv_typepic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerCrop"
        />
	<TextView 
	    android:id="@+id/equiment_list_item_tv_name"
	    android:layout_width="180dp"
	    android:layout_height="match_parent"
	    android:singleLine="true"
	    android:textColor="@color/color_font_gray"
	    android:layout_marginLeft="5dp"
	    android:gravity="center_vertical"
	    />
	<CheckBox 
	    android:id="@+id/equiment_list_item_cb_check"
	    android:layout_width="22dp"
	    android:layout_height="22dp"
	    android:focusable="false"
	    android:focusableInTouchMode="false"
	    android:layout_marginLeft="40dp"
	    android:button="@null"
	    android:background="@drawable/bg_xml_mutual_invite_check"
	    android:clickable="false"
	    android:visibility="gone"
	    />
	<TextView 
	    android:id="@+id/equipment_list_item_tv_tmp"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    />
</LinearLayout>