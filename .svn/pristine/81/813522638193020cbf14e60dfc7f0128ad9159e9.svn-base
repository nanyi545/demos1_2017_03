<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="1dp"
    android:paddingBottom="1dp" >
    <RelativeLayout 
        android:id="@+id/alarm_list_item_rl_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.1">
	    <CheckBox 
	        android:id="@+id/alarm_list_item_cb_check"
	        android:layout_width="14dp"
	        android:layout_height="14dp"
	        android:focusable="false"
	        android:clickable="false"
	        android:visibility="invisible"
            android:background="@drawable/bg_xml_login_rempwd"
            android:button="@null"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="2dp"
	        android:layout_marginRight="2dp"
	        />
	    <TextView 
	        android:id="@+id/alarm_list_item_tv_number"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical|left"
	        android:layout_toRightOf="@id/alarm_list_item_cb_check"
	        android:paddingLeft="2dp"
	        android:singleLine="true"
	        />
    </RelativeLayout>
    <TextView 
        android:id="@+id/alarm_list_item_tv_eqname"
        style="@style/style_alarm_list_item"
        android:layout_weight="1.7"
        android:singleLine="true"
        />
    <TextView 
        android:id="@+id/alarm_list_item_tv_time"
        style="@style/style_alarm_list_item"
        android:layout_weight="1.5"
        />
    <TextView 
        android:id="@+id/alarm_list_item_tv_info"
        style="@style/style_alarm_list_item"
        android:layout_weight="1.7"
        android:singleLine="true"
        />
</LinearLayout>