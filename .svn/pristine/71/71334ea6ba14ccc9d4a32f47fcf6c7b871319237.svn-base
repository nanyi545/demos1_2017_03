<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cpb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context="com.webcon.sus.activities.StationDevicesFragment">
    
    <ListView
        android:id="@+id/list_devices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:fadingEdge="none"
        android:dividerHeight="0dp">
    </ListView>

    <com.webcon.sus.CircleProgressButton.CircularProgressButton
        android:id="@+id/bn_station_defence"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/White"
        cpb:cpb_cornerRadius="8dp"
        cpb:cpb_textComplete="@string/cpb_other"
        cpb:cpb_textError="@string/cpb_closed"
        cpb:cpb_textIdle="@string/cpb_opened"/>
</LinearLayout>
