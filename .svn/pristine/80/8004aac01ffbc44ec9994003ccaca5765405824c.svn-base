<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_camera_monitor_annal_bg" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_camera_monitor_annal_title"
        android:textSize="16sp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/str_xml_camera_monitor_annal_title"
        android:padding="10dp"
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/bg_camera_monitor_annal_title"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp" > 
        <TextView
            android:id="@+id/camera_monitor_annal_tv_msgtype"
            style="@style/style_camera_config_tv"
            android:text="@string/str_xml_camera_monitor_annal_tv_msgtype" />

        <TextView
            android:id="@+id/camera_monitor_annal_tv_msgtime"
            style="@style/style_camera_config_tv"
            android:text="@string/str_xml_camera_monitor_annal_tv_msgtime"
            android:layout_below="@id/camera_monitor_annal_tv_msgtype" />

        <TextView
            android:id="@+id/camera_monitor_annal_tv_msgdate"
            style="@style/style_camera_config_tv"
            android:text="@string/str_xml_camera_monitor_annal_tv_msgdate"
            android:layout_below="@id/camera_monitor_annal_tv_msgtime" />
        <TextView 
            android:id="@+id/camera_monitor_annal_settv_msgtype"
            android:layout_width="140dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_camera_monitor_annal_msgtype"
            android:layout_toRightOf="@id/camera_monitor_annal_tv_msgtype"
            android:layout_alignTop="@id/camera_monitor_annal_tv_msgtype"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            />
        <LinearLayout 
            android:id="@+id/camera_monitor_annal_ll_msgtime"
            android:layout_width="180dp"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:layout_alignLeft="@id/camera_monitor_annal_settv_msgtype"
            android:layout_toRightOf="@id/camera_monitor_annal_tv_msgtime"
            android:layout_alignTop="@id/camera_monitor_annal_tv_msgtime" >
            <TextView 
                android:id="@+id/camera_monitor_annal_tv_starttime"
                style="@style/style_camera_config_tv_timeselect"
                />
            <TextView 
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1.3"
                android:layout_gravity="center_vertical"
                android:background="@color/color_camera_config_time_bg"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView 
                android:id="@+id/camera_monitor_annal_tv_endtime"
                style="@style/style_camera_config_tv_timeselect"
                />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/camera_monitor_annal_ll_msgdate"
            android:layout_width="220dp"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:layout_alignLeft="@id/camera_monitor_annal_settv_msgtype"
            android:layout_toRightOf="@id/camera_monitor_annal_tv_msgdate"
            android:layout_alignTop="@id/camera_monitor_annal_tv_msgdate" >
            <TextView 
                android:id="@+id/camera_monitor_annal_tv_startdate"
                style="@style/style_camera_monitor_annal_tv_date"
                />
            <TextView 
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.69"
                android:layout_gravity="center_vertical"
                android:background="@color/color_camera_config_time_bg"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView 
                android:id="@+id/camera_monitor_annal_tv_enddate"
                style="@style/style_camera_monitor_annal_tv_date"
                />
        </LinearLayout>
        <Button 
            android:id="@+id/camera_monitor_annal_bt_search"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/bg_xml_camera_config_bottom_bt"
            android:text="@string/btn_serarch"
            android:layout_below="@id/camera_monitor_annal_ll_msgdate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
    </RelativeLayout>
    <ListView 
        android:id="@+id/camera_monitor_annal_msglist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:cacheColorHint="@color/color_transparent"
        android:fastScrollEnabled="true"
        android:visibility="gone"
        />
    <TextView 
        android:id="@+id/camera_monitor_annal_msg_tv_none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/str_xml_camera_monitor_annal_tv_msg_none"
        android:textColor="@color/color_font_lightgray"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/camera_monitor_annal_msg_rl_loading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ProgressBar 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            style="?android:attr/progressBarStyle"
	            />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/color_font_lightgray"
                android:text="@string/str_xml_camera_monitor_annal_tv_msg_search"
                android:paddingLeft="10dp"
                android:paddingBottom="2dp"
                android:textSize="14sp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>