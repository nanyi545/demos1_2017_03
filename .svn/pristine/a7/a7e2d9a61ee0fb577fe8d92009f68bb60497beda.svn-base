<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mlp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context="com.webcon.sus.activities.MainStationListFragment">

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:id="@+id/mlp_loading_stations"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        mlp:mlpb_progress_stoke_width="3dp"
        mlp:mlpb_progress_color="@color/Cyan_"
        android:visibility="visible"/>

    <ListView
        android:id="@+id/list_stations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@color/Transparent"
        android:dividerHeight="0dp"
        android:background="@color/Transparent"
        android:visibility="gone"
        android:fadingEdge="none">
    </ListView>


</LinearLayout>
