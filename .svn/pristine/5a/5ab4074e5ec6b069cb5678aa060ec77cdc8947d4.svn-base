<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialedit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.webcon.sus.activities.LoginActivityCompat">

    <include layout="@layout/part_login_head"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/linear_login_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editm_login_user"
                style="@style/login_input_compat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:focusableInTouchMode="true"
                android:hint="@string/str_xml_login_username"
                materialedit:met_autoValidate="false"
                materialedit:met_clearButton="true"
                materialedit:met_errorColor="@color/Red_"
                materialedit:met_floatingLabel="normal"
                materialedit:met_floatingLabelTextColor="@color/Grey800"
                materialedit:met_floatingLabelTextSize="14sp"
                materialedit:met_primaryColor="@color/Blue_"
                materialedit:met_textColorHint="@color/Grey_"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editm_login_passwd"
                style="@style/login_input_compat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:hint="@string/str_xml_login_userpwd"
                android:inputType="textPassword"
                materialedit:met_autoValidate="false"
                materialedit:met_clearButton="true"
                materialedit:met_errorColor="@color/Red_"
                materialedit:met_floatingLabel="normal"
                materialedit:met_floatingLabelTextColor="@color/Grey800"
                materialedit:met_floatingLabelTextSize="14sp"
                materialedit:met_primaryColor="@color/Blue_"
                materialedit:met_textColorHint="@color/Grey_"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_login_input"
            android:orientation="vertical">

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/bnr_login_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/Blue_"
                android:minWidth="100dp"
                android:text="@string/bn_login_login"/>

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/bnr_login_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/Blue_"
                android:minWidth="100dp"
                android:text="@string/bn_login_setting"/>
        </LinearLayout>

        <!-- 设置窗口 -->
        <RelativeLayout
            android:id="@+id/login_rl_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/Blue_"
            android:paddingBottom="@dimen/login_text_padding_vertical"
            android:paddingLeft="@dimen/login_text_padding_horizontal"
            android:paddingRight="@dimen/login_text_padding_horizontal"
            android:paddingTop="@dimen/login_text_padding_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/login_settingdiv_tv_ip"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/login_text_hight"
                android:gravity="center_vertical"
                android:text="@string/str_xml_login_ip"
                android:textSize="@dimen/login_text_size"
                android:textColor="@color/color_login_settingdiv_tv"/>

            <TextView
                android:id="@+id/login_settingdiv_tv_port"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/login_text_hight"
                android:layout_alignLeft="@id/login_settingdiv_tv_ip"
                android:layout_below="@id/login_settingdiv_tv_ip"
                android:layout_marginTop="@dimen/login_text_mid_h"
                android:gravity="center_vertical"
                android:text="@string/str_xml_login_port"
                android:textSize="@dimen/login_text_size"
                android:textColor="@color/color_login_settingdiv_tv"/>

            <EditText
                android:id="@+id/edit_login_setting_ip"
                style="@style/login_settingdiv_input_et"
                android:layout_width="@dimen/login_text_edit_width"
                android:layout_height="@dimen/login_text_hight"
                android:layout_alignTop="@id/login_settingdiv_tv_ip"
                android:layout_marginLeft="@dimen/login_text_mid_v"
                android:layout_toRightOf="@id/login_settingdiv_tv_ip"
                android:maxLength="15"
                android:textSize="@dimen/login_text_size"
                android:text="@string/str_login_default_ip"/>

            <EditText
                android:id="@+id/edit_login_setting_port"
                style="@style/login_settingdiv_input_et"
                android:layout_width="@dimen/login_text_edit_width"
                android:layout_height="@dimen/login_text_hight"
                android:layout_alignTop="@id/login_settingdiv_tv_port"
                android:layout_marginLeft="@dimen/login_text_mid_v"
                android:layout_toRightOf="@id/login_settingdiv_tv_port"
                android:inputType="number"
                android:maxLength="5"
                android:textSize="@dimen/login_text_size"
                android:text="@string/str_login_default_port"/>

            <Button
                android:id="@+id/login_setting_ib_ok"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/login_text_hight"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/edit_login_setting_ip"
                android:gravity="center"
                android:background="@drawable/bg_xml_login_settingdiv_btn"
                android:text="@string/btn_ok"
                android:textSize="@dimen/login_text_size"
                android:textColor="@color/color_white"/>
            <Button
                android:id="@+id/login_setting_ib_default"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/login_text_hight"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/edit_login_setting_port"
                android:gravity="center"
                android:background="@drawable/bg_xml_login_settingdiv_btn"
                android:text="@string/btn_default"
                android:textSize="@dimen/login_text_size"
                android:textColor="@color/color_white"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
