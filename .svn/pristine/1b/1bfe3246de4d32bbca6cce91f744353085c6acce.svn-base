<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mlp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webcon.sus.activities.AlarmMainFragment">

    <LinearLayout
        android:id="@+id/linear_alarm_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/linear_alarm_container_head"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/bg_xml_tab_alarmlist_title">
            <TextView
                android:layout_weight="1.1"
                android:text="@string/str_xml_alarm_tv_alarmlist_title_num"
                style="@style/style_tab_alarmlist_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tab_alarmlist_title_line"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_weight="1.7"
                android:text="@string/str_xml_alarm_tv_alarmlist_title_name"
                style="@style/style_tab_alarmlist_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tab_alarmlist_title_line"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_weight="1.5"
                android:text="@string/str_xml_alarm_tv_alarmlist_title_time"
                style="@style/style_tab_alarmlist_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tab_alarmlist_title_line"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_weight="1.7"
                android:text="@string/str_xml_alarm_tv_alarmlist_title_info"
                style="@style/style_tab_alarmlist_title"/>
        </LinearLayout>
        <ListView
            android:id="@+id/list_alarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/color_transparent"
            android:fastScrollEnabled="true"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/str_xml_alarm_tv_nonealarm"
        android:textColor="@color/color_font_lightgray"
        android:visibility="visible"/>

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:id="@+id/mlp_loading_alarms"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        mlp:mlpb_progress_stoke_width="3dp"
        mlp:mlpb_progress_color="@color/Cyan_"
        android:visibility="visible"/>

    <!-- 全选框 ##暂时不处理 -->
    <RelativeLayout
        android:id="@+id/alarm_list_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Blue_"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">
        <!--android:background="@color/color_font_gray"-->
        <TextView
            android:id="@+id/alarm_list_top_menu_selectall"
            android:layout_alignParentLeft="true"
            android:text="@string/str_alarm_list_tv_selectall"
            style="@style/style_alarm_list_bottom_menu_tv"/>
        <TextView
            android:id="@+id/alarm_list_top_menu_delete"
            android:layout_alignParentRight="true"
            android:text="@string/str_alarm_list_tv_delete"
            style="@style/style_alarm_list_bottom_menu_tv"/>
    </RelativeLayout>
</RelativeLayout>
