<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.webcon.sus.demo"
    android:versionCode="1"
    android:versionName="5.1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <!-- Push service 运行需要的权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- for log. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- 获取正在运行的task -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECORD_VIDEO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <!-- android:name="com.baidu.frontia.FrontiaApplication" -->
    <application
        android:name="com.webcon.wp.utils.WPApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_915"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 登陆页面 -->
        <!-- <action android:name="com.webcon.sus.activities.LoginActivityCompat" /> -->
        <!-- android:windowSoftInputMode="stateHidden|adjustResize" -->


        <!-- <activity android:name="com.JNItestActivity"></activity> -->
        <!-- com.webcon.sus.activities.LoginActivityCompat -->

        <activity
            android:name="com.webcon.sus.activities.LoginActivityCompat"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.webcon.sus.activities.LoginActivityCompat" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 主页面 -->


        <!-- 摄像头监控记录 -->
        <activity
            android:name="com.webcon.sus.activities.CameraMonitorAnnalActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <!-- 监控视频 -->


        <!-- 个人信息 -->
        <activity
            android:name="com.webcon.sus.activities.PersonalInformationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <!-- 报警信息详细页面 -->
        <!-- android:theme="@android:style/Theme.Dialog" -->


        <!-- dowork服务 -->


        <!-- 注册点击会话邀请通知的广播 -->


        <!-- 注册与服务器断开连接的广播 -->
        <receiver
            android:name="com.webcon.sus.receiver.LogoutExitReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.webcon.wp.personal.action.LogoutExitAction" />
            </intent-filter>
        </receiver>

        <!-- 注册点击通知事件的广播 -->
        <receiver
            android:name="com.webcon.sus.receiver.NotificationClickReceiver"
            android:exported="false" >
            <intent-filter>

                <!-- 报警通知点击事件 com.webcon.wp.personal.action.AlarmNotificationClickAction -->
                <action android:name="com.webcon.wp.personal.action.AlarmNotificationClickAction" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.webcon.sus.develop_test.audioTest.receiver_test.MyTestReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="AAAAAAAAAAAAA" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.webcon.sus.receiver.NotificationStateReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.webcon.wp.personal.action.AlarmNotificationPop" />
                <action android:name="com.webcon.wp.personal.action.AlarmNotificationDismissed" />
            </intent-filter>
        </receiver>

        <!-- 主界面 -->
        <activity
            android:name="com.webcon.sus.activities.MainActivityCompat"
            android:label="@string/title_activity_main_activity_compat"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 警告话音设置界面 -->
        <activity
            android:name="com.webcon.sus.activities.ExpelAudioActivity"
            android:label="@string/title_activity_expel_audio"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 站场详细列表界面 -->
        <activity
            android:name="com.webcon.sus.activities.StationDetailsActivity"
            android:label="@string/title_activity_station_details"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 站场详细信息界面# -->
        <activity
            android:name="com.webcon.sus.activities.StationInformationActivity"
            android:label="@string/title_activity_station_information"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- 设备详细信息界面# -->
        <activity
            android:name="com.webcon.sus.activities.DeviceInformationActivity"
            android:label="@string/title_activity_device_information"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!--
         视频预览界面
         *注意：添加configChanges是为了防止activity在切换屏时重启
        -->
        <activity
            android:name="com.webcon.sus.activities.MonitorActivityCompat"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_mornitor_activity_compat"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.webcon.sus.activities.AlarmDetailsActivityCompat"
            android:label="@string/title_activity_alarm_details_activity_compat"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/DialogTheme.New" >

            <!-- android:theme="@style/DialogTheme.New" -->
        </activity>

        <service
            android:name="com.webcon.sus.service.CService"
            android:enabled="true"
            android:exported="false"
            android:isolatedProcess="false" />

        <activity
            android:name="com.webcon.sus.develop_test.audioTest.AudioTestActivity"
            android:label="@string/title_activity_audio_test" />
    </application>

</manifest>