<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/device_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/selector_list_item_device"
    android:layout_gravity="center_vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="32dp"
            android:layout_height="64dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_link_begin"
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:src="@drawable/divider_simple_3"
                android:contentDescription="@string/str_null"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_timeline_default_marker"
                android:contentDescription="@string/str_null"/>
            <ImageView
                android:id="@+id/iv_link_end"
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:src="@drawable/divider_simple_3"
                android:contentDescription="@string/str_null"/>
        </LinearLayout>

        <TextView
            android:id="@+id/device_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="@string/str_test_device"
            android:textSize="@dimen/tsize_6"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/device_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:text="@string/str_test_device_detail"
            android:textColor="@color/Grey600"
            android:textSize="14sp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/device_item_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_webc"
        android:contentDescription="@string/str_null"/>
</RelativeLayout>