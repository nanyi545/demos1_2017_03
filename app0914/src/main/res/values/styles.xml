<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme_Old" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme.Base" parent="Base.Theme.AppCompat.Light.DarkActionBar"/>
    <style name="AppTheme.Base.No" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="AppTheme.Base.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base.No">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dialog Theme 定义的对话框样式 -->
    <style name="DialogTheme" parent="AppTheme.Base.Dialog" />
    <style name="DialogTheme.New" parent="Theme.AppCompat.Dialog">
        <item name="android:windowTitleStyle">@style/MyTitleStyle</item>
        <item name="android:windowBackground">@color/Transparent</item>
    </style>

    <!--android:windowBackground 在这里好像没用。。-->
    <style name="DialogThemeMaterial" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!-- 处理对话框样式的title -->
    <style name="MyTitleStyle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/MyTitleTextStyle</item>
    </style>
    <style name="MyTitleTextStyle">
        <item name="android:textColor">#00000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!-- ***divider*** -->

