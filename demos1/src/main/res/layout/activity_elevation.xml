<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="test1.nh.com.demos1.activities.matDesign.ElevationActivity">

    <!--设置圆角background-->
    <!--android:background="@drawable/myrec"-->

    <TextView
        android:id="@+id/id_ele_tv1"
        android:layout_width="150dp"
        android:background="@color/Red200"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:text="API>=21 elevation=0"
        android:layout_alignLeft="@+id/id_ele_tv2"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@color/Red200"
        android:id="@+id/id_ele_tv2"
        android:text="API>=21 elevation=6"
        android:layout_below="@+id/id_ele_tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="6dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@color/Red200"
        android:id="@+id/id_ele_tv3"
        android:text="API>=21 elevation=12"
        android:layout_below="@+id/id_ele_tv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="background decides\n shape of shadow"
        android:id="@+id/textView2"
        android:background="@drawable/myrec"
        android:layout_below="@+id/id_ele_tv3"
        android:layout_marginTop="20dp"
        android:elevation="6dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="background decides\n shape of shadow"
        android:id="@+id/textView3"
        android:background="@drawable/mycirc"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:elevation="6dp"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
