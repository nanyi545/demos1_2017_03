<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="test1.nh.com.demos1.activities.MVP_Activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/button_save"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load"
        android:id="@+id/button_load"
        android:layout_toRightOf="@id/button_save"
        />

    <TextView
        android:id="@+id/tv_id"
        android:layout_marginTop="80dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="id"
        android:gravity="center"
        android:background="@color/Teal100" />

    <EditText
        android:id="@+id/et_id"
        android:layout_below="@id/tv_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/Red50"
        ></EditText>


    <TextView
        android:id="@+id/tv_firstName"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/tv_id"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="first name"
        android:gravity="center"
        android:background="@color/Teal100" />

    <EditText
        android:id="@+id/et_fn"
        android:layout_below="@id/tv_firstName"
        android:layout_alignLeft="@id/tv_firstName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/Red50"
        ></EditText>

    <TextView
        android:id="@+id/tv_LastName"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/tv_firstName"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="last name"
        android:gravity="center"
        android:background="@color/Teal100" />

    <EditText
        android:id="@+id/et_ln"
        android:layout_below="@id/tv_LastName"
        android:layout_alignLeft="@id/tv_LastName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/Red50"
        ></EditText>





</RelativeLayout>
