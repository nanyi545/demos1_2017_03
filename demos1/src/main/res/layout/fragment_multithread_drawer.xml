<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="test1.nh.com.demos1.activities.DrawerActivity$PlaceholderFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lights_panal"
        >
        <TextView
            android:id="@+id/thread_tv1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/thread_tv2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            ></TextView>

        <TextView
            android:id="@+id/thread_tv3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            ></TextView>

        <TextView
            android:id="@+id/thread_tv4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            ></TextView>

        <Button
            android:id="@+id/thread_B1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="RUN"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            ></Button>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/states_panal"
        android:layout_below="@id/lights_panal"
        >
        <TextView
            android:id="@+id/thread_tv5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:textSize="8sp"
            ></TextView>
        <TextView
            android:id="@+id/thread_tv6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="8sp"

            ></TextView>

        <TextView
            android:id="@+id/thread_tv7"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="8sp"

            ></TextView>

        <TextView
            android:id="@+id/thread_tv8"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textSize="8sp"

            ></TextView>

        <Button
            android:id="@+id/bn_null"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="---"
            android:background="@color/Teal300"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            ></Button>


    </LinearLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/c_p_tv"
        android:layout_below="@id/states_panal"
        />

</RelativeLayout>
