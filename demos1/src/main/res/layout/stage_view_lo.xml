<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/White"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:textColor="@color/Gray300"
        android:id="@+id/top_text"
        android:layout_marginTop="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="12313213"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <test1.nh.com.demos1.customView.TriangleView
        android:id="@+id/triangle"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/top_text"
        app:upsideDown="true"
        app:triangleColor="@color/Orange400"
        android:layout_width="8dp"
        android:layout_height="4dp" />


    <ImageView
        android:id="@+id/center_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/circle_gray"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/left_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@color/Gray300"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/center_dot"
        android:layout_marginRight="4dp"
        />


    <ImageView
        android:id="@+id/right_line"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@color/Gray300"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/center_dot"
        android:layout_marginLeft="4dp"
        />

    <!--<com.housekeep.ala.hcholdings.housekeeping.customViews.TriangleView-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_above="@+id/bottom_text"-->
        <!--app:triangleColor="@color/colorPrimary"-->
        <!--android:layout_width="10dp"-->
        <!--android:layout_height="5dp" />-->

    <TextView
        android:textColor="@color/Blue500"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_text"
        android:layout_marginBottom="6dp"
        android:text="123123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>